<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_title_pull_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:textColor="@color/colorPrimary"
        tools:text="@string/title_pull_request"/>

    <TextView
        android:id="@+id/tv_body_pull_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:maxLines="4"
        android:layout_below="@id/tv_title_pull_request"
        tools:text="@string/body_text"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_pull_request"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_below="@id/tv_body_pull_request"
        android:layout_margin="5dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/tv_username_pull_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_profile_pull_request"
        android:layout_below="@id/tv_body_pull_request"
        tools:text="@string/name_owner"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_username_pull_request"
        android:layout_toRightOf="@id/img_profile_pull_request"
        android:text="@string/title_date"/>

    <TextView
        android:id="@+id/tv_date_pull_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_username_pull_request"
        android:layout_toRightOf="@id/tv_title_date"
        tools:text="@string/date"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/img_profile_pull_request"/>

</RelativeLayout>